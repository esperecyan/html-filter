{
	"name": "esperecyan/html-filter",
	"description": "ホワイトリストによる要素名と属性名のチェックを行うシンプルなHTMLフィルターです。",
	"type": "project",
	"homepage": "https://github.com/esperecyan/html-filter",
	"license": "MPL-2.0",
	"authors": [
		{
			"name": "100の人",
			"homepage": "https://twitter.com/esperecyan",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/esperecyan/html-filter/issues"
	},
	"require": {
		"php": ">=7.0",
		"ext-bcmath": "*",
		"ext-ctype": "*",
		"ext-gettext": "*",
		"ext-imagick": "*",
		"ext-intl": "*",
		"ext-mbstring": "*",
		"ext-SPL": "*",
		"ext-zip": "*",
		"esperecyan/url": "^4.5.0",
		"masterminds/html5": "^2.2.0",
		"psr/log": "^1.0.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.3.2"
	},
	"autoload": {
		"psr-4": {
			"esperecyan\\html_filter\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"esperecyan\\html_filter\\": "tests/"
		}
	}
}
